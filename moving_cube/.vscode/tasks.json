{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Cubo",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "main",           // Nombre del archivo ejecutable
                "main.cpp",       // Nombre del archivo fuente
                "-lGL",           // Enlazar con la biblioteca OpenGL
                "-lGLU",          // Enlazar con la biblioteca GLU
                "-lglut"          // Enlazar con la biblioteca GLUT
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
